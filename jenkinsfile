pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                // Используем Nuitka для компиляции CatBoostApp.py в исполняемый файл
                sh 'nuitka --standalone --onefile CatBoostApp.py'
            }
        }
    }
    post {
        success {
            // Указывает Jenkins сохранить созданный исполняемый файл
            // Путь к артефакту может отличаться, следует проверить точное расположение после сборки
            archiveArtifacts artifacts: 'CatBoostApp.dist/CatBoostApp', onlyIfSuccessful: true
        }
    }
}
